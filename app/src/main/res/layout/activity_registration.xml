<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:keepScreenOn="true">
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/BgColor">
        
        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar_inner"/>
        
        <LinearLayout
            android:id="@+id/view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/toolbar_inner">
            
            <EditText
                android:id="@+id/ed_register_mobNo"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Enter Mobile Number"
                android:textSize="28sp"
                android:gravity="center"
                android:digits="0123456789"
                android:textColor="@color/EditTextLabelsColor"
                android:textCursorDrawable="@drawable/red_cursor"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:background="@drawable/edit_text_red"
                android:layout_marginRight="10dp"/>
            
            <Button
                android:id="@+id/btn_ViewDetails"
                android:layout_width="90dp"
                android:layout_height="43dp"
                android:text="View"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:background="@drawable/login_button"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/thumb_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/view_layout">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Employee Name"
                    android:textSize="18sp"
                    android:textColor="@color/GreyTextColor"/>
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.08"
                    android:text=":"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/BlackTextColor"/>
                
                <TextView
                    android:id="@+id/txt_employeeName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="@color/BlackTextColor"/>
            </LinearLayout>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Employee ID"
                    android:textSize="18sp"
                    android:textColor="@color/GreyTextColor"/>
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.08"
                    android:text=":"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/BlackTextColor"/>
                
                <TextView
                    android:id="@+id/txt_employeeId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="@color/BlackTextColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp">
                
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:layout_marginRight="30dp">
                    
                    <ImageView
                        android:id="@+id/img_finger1"
                        android:layout_width="130dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/imagefinger"/>
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp">
                    
                    <ImageView
                        android:id="@+id/img_finger2"
                        android:layout_width="130dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/imagefinger"/>
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/imagecheck1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="175dp"
                android:visibility="invisible"
                android:src="@drawable/check_icon" />

            <ImageView
                android:id="@+id/imagecheck2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="180dp"
                android:visibility="invisible"
                android:src="@drawable/check_icon" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">
                
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:layout_marginRight="30dp">
                    
                    <ImageView
                        android:id="@+id/img_finger3"
                        android:layout_width="130dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/imagefinger"/>
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp">
                    
                    <ImageView
                        android:id="@+id/img_finger4"
                        android:layout_width="130dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/imagefinger"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/imagecheck3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="175dp"
                    android:visibility="invisible"
                    android:src="@drawable/check_icon" />

                <ImageView
                    android:id="@+id/imagecheck4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="180dp"
                    android:visibility="invisible"
                    android:src="@drawable/check_icon"/>
            </LinearLayout>
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/reg_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="20dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone">
            
            <EditText
                android:id="@+id/ed_reg_logout"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Enter Password"
                android:textSize="14sp"
                android:textColor="@color/InputTextColor"
                android:textCursorDrawable="@drawable/black_cursor"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:background="@drawable/inner_input_box"
                android:layout_marginRight="10dp"/>
            
            <Button
                android:id="@+id/btn_reg_logout"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Switch"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="@drawable/login_button"/>
        </LinearLayout>
        
        <!--<Button
            android:id="@+id/btn_reset_thumb"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Register Thumb"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_button"
            android:layout_below="@id/thumb_layout"
            android:layout_centerHorizontal="true"/>-->

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_below="@id/thumb_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="260dp">-->

            <Button
                android:id="@+id/btn_reset_nxtthumb1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Next Thumb"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_below="@id/thumb_layout"
                android:background="@drawable/login_button"
                android:layout_marginLeft="135dp"/>

            <Button
                android:id="@+id/btn_reset_thumb"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Register Thumb"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:layout_below="@id/thumb_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/btn_reset_nxtthumb1"
                android:background="@drawable/login_button"
                android:layout_marginLeft="40dp"/>

        <!--</LinearLayout>-->
        
        <LinearLayout
            android:id="@+id/res_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="20dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_below="@+id/btn_reset_thumb">
            
            <EditText
                android:id="@+id/ed_res_logout"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Enter Password"
                android:textSize="14sp"
                android:textColor="@color/InputTextColor"
                android:textCursorDrawable="@drawable/black_cursor"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:background="@drawable/inner_input_box"
                android:layout_marginRight="10dp"/>
            
            <Button
                android:id="@+id/btn_res_logout"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Switch"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="@drawable/login_button"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/progress_layout_tmbreg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/black_border"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="40dp"
            android:visibility="gone"
            android:layout_centerInParent="true">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please wait..."
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/CoordinatorLayout_reg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>
</ScrollView>
